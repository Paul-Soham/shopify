{% comment %}
----------------------------------------------------------------------------
  Snippet: Collection hero
  - Header shown on the collection page.
----------------------------------------------------------------------------
{% endcomment %}

{% assign has_custom_hero = false %}

{% for block in section.blocks %}
  {% if block.settings.collection_handle == collection.handle %}
    {% assign has_custom_hero = true %}
    {% assign block_obj = block %}
    {% break %}
  {% endif %}
{% endfor %}
{% if has_custom_hero %}
  {% render 'collection-hero-custom' with
    block: block_obj
  %}
{% else %}
  {% render 'collection-hero-default' with
    collection: collection
  %}
{% endif %}

{% schema %}
  {
    "name": "Collection Hero Banners",
    "settings": [
      {
        "type": "header",
        "content": "Hero Banners"
      }
    ],
    "blocks": [
      {
        "type": "image",
        "name": "Hero Banner",
        "settings": [
          {
            "type": "header",
            "content": "Collection"
          },
          {
            "type": "collection",
            "id": "collection_handle",
            "label": "Collection",
            "info": "Use this field to map this block to the collection page on which you would to display the content."
