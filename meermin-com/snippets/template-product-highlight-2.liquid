{% if product.metafields.highlight.image_2-1 and 
  product.metafields.highlight.heading_2 and 
  product.metafields.highlight.description_2 and 
  product.metafields.highlight.image_2-2
%}
  <div class="template-product__highlight-2-container">
    <div class="template-product__image-2-container">
      <div class="container">
        <div class="row template-product__image-2-wrapper">
          <img src="https://{{ product.metafields.highlight.image_2-1 }}" alt="" class="col xs6 template-product__image-2-1">
          <div class="col xs6 template-product__image-2-2">
            <div class="template-product__highlight desktop">
              <h5 class="template-product__highlight-title h1">
                {{ product.metafields.highlight.heading_2 }}
              </h5>
              <p class="template-product__highlight-text">
                {{ product.metafields.highlight.description_2 }}
              </p>
            </div>
            <img src="https://{{ product.metafields.highlight.image_2-2 }}" alt="">
          </div>
        </div>
      </div>
    </div>

    <div class="template-product__highlight-container mobile">
      <div class="container">
        <div class="row">
          <div class="template-product__highlight col xs12">
            <h5 class="template-product__highlight-title h1">
              {{ product.metafields.highlight.heading_2 }}
            </h5>
            <p class="template-product__highlight-text">
              {{ product.metafields.highlight.description_2 }}
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
{% endif %}  