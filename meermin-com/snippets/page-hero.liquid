{% comment %}
----------------------------------------------------------------------------
  Snippet: Page hero
  - Header shown on the custom page.
----------------------------------------------------------------------------
{% endcomment %}

<header
  class="template-collection__hero hero lazyload custom-section"
  data-bgset="{% render 'responsive-bg-image', image: page_hero_image %}"
>
  <div class="container">
    <div class="row no-margin-bottom">
      <div class="col xs12">
        <div
          class="
            hero__container
            {{ page_content_color }}
          "
        >
          <h1 
            class="d2 hero__title
            {{ page_content_color }}
            "
          >
            {{ page_hero_title }}
          </h1>

          {% if page_hero_desc != blank %}
            <div class="hero__description">
              <p class="h4">
                {{ page_hero_desc }}
              </p>
            </div>
          {% endif %}
        </div>
      </div>
    </div>
  </div>
</header>
