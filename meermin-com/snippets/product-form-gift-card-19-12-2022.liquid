{% comment %}
------------------------------------------------------------------------------
  Snippet: Product form
  - Each product form can be assigned a namespace to target
  independently with scripts.
------------------------------------------------------------------------------
{% endcomment %}
{% assign current_variant = product.selected_or_first_available_variant %}
{% assign featured_image = current_variant.featured_image | default: product.featured_image %}

{% assign form_namespace = 'container' %}
{% assign supported_swatch_list = 'color, colour, size, waist, value' | split: ', ' %}
{% assign supported_color_text = 'color, colors, colour, colours' | split: ', ' %}
{% assign max_inventory = current_variant.inventory_quantity %}

{% if namespace %}
  {% assign form_namespace = namespace %}
{% endif %}

{% if max_inventory < 0 %}
  {% assign max_inventory = 999 %}
{% endif %}


  <form
  class="product-form-2"
  action="/cart/add"
  enctype="multipart/form-data"
  method="post"
>

    <div class="product-form__header">
        
      <div class="gft_crd_main_div">
          <div class="digi_gft_crd_fst_dd">
            <label>SELECT THE AMOUNT</label>
            <select class="no-js-2" onchange="changeGiftCardContent()" name="id" id="master-selector-dd-2" style="background-image: url(//cdn.shopify.com/s/files/1/0376/1291/2685/t/33/assets/icon-caret-down.svg?v=33670933299523158081665734135);" js-product-form="masterSelector">
              {% for variant in product.variants %}
                <option
                  {% unless variant.available %}
                    disabled="disabled"
                  {% endunless %}
                  {% if variant == current_variant %}
                    selected="selected"
                  {% endif %}
                  value="{{ variant.id }}"
                >
                  {{ variant.title }}
                </option>
              {% endfor %}
            </select>
          </div>
          <div class="digi_gft_crd_fst_txt">
            <p>Digital Gift Certificates. No physical cards will be sent. No additional processing fees.</p>
          </div>
        </div>

      <div class="gift-card-description">
        <div class="desc_div_1">
          <h4>INSPIRATION</h4>
          <p><b style="font-weight:700;" class="set_price">$400</b> CAN BE REDEEMED FOR:</p>
          <p>2 Pairs of Classic Collection Shoes <br>or<br> 1 Pair of Classic Collection Boots + Shoe Care</p>
        </div>
        <div class="desc_div_2">
          <img src="https://cdn.shopify.com/s/files/1/0376/1291/2685/files/image_2022_12_16T06_38_48_173Z_256x256_crop_center.png?v=1671173029" alt="" />
        </div>
      </div>

      <div class="gift-card-description-2">
        <h5>DIGITAL GIFT CARDS</h5>
        <p>For your convenience, all our gift cards are digital. They’ll be delivered exclusively by email, either immediately or on the date you select. Email will contain all the necessary information on how to redeem the gift card at checkout.</p> 
        <p>Our gift cards have no additional processing fees.</p>
      </div>

      <div class="recip-entry">
        <div class="recip_name_div">
          <p class="line-item-property__field recp_name_cls">
            <label for="recipient-name">Name</label>
            <input id="recipient-name" required class="required" type="text" placeholder="Recipient’s Full Name" name="properties[Name]">
          </p>
        </div>
        <div class="recip_email_div">
          <p class="line-item-property__field recp_email_cls">
            <label for="recipient-email">Email</label>
            <input id="recipient-email" required class="required" type="email" placeholder="Recipient’s Email Address" name="properties[Email]">
          </p>
        </div>
        <div class="recip_message_div">
          <p class="line-item-property__field recp_msg_cls">
            <label for="recipient-message">Message</label>
            <textarea id="recipient-message" required class="required" placeholder="Add a personal message for your recipient" name="properties[Message]"></textarea>
          </p>
        </div>
      </div>
      
      <div class="final_btn_div">
        <div class="btn_div_1">
          <input type="submit" value="SEND GIFT CARD NOW" class="btn recip-gift-btn" />
        </div>
        <div class="btn_div_2">
          <input type="button" id="choose_date_field" class="set_date_btn" value="CHOOSE A DATE">
          <p class="line-item-property__field recp_date_cls" style="display:none;">
            <input id="recp-date" type="text" name="properties[Receiving Date]">
          </p>
        </div>
        <p class="date_err_msg"></p>
      </div>
        
    </div>

    <div class="product-form__footer">

      

    </div>
  
</form> 