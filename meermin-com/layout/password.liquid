<!doctype html>
<html class="no-js" lang="{{ shop.locale }}">
  <head>
    <meta charset="utf-8">
    <meta content="IE=edge" http-equiv="X-UA-Compatible">
    <meta content="width=device-width,initial-scale=1" name="viewport">
    <meta content="{{ settings.application_color }}" name="theme-color">
    <link href="{{ canonical_url }}" rel="canonical">

    {% if settings.enable_href_lang %}
      {% render 'site-href-lang' %}
    {% endif %}

    {% if settings.favicon != blank %}
      {% render 'site-favicon' %}
    {% endif %}

    {% render 'theme-title' %}

    {% if page_description %}
      <meta content="{{ page_description | escape }}" name="description" >
    {% endif %}

    {% render 'font-face' %}
    {% render 'critical' %}
    {% render 'social-meta-tags' %}
    {% render 'theme-scripts' %}

    {{ content_for_header }}
  
  

  {% render 'shogun-head' %}
</head>

  <body class="template-password">
    {% if shop.permanent_domain contains 'meermin-seconds' %}
      {% section 'password-for-seconds' %}
    {% else %}
      {{ content_for_layout }}
    {% endif %}

    {% render 'style-tags' with layout: 'password' %}
    {% render 'script-tags' with layout: 'password' %}
  </body>
</html>
