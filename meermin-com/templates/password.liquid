{% comment %}
----------------------------------------------------------------------------
  Template: Password
  - The share buttons share the home page URL.
  - The share text is grabbed from the store meta description.
----------------------------------------------------------------------------
{% endcomment %}
{% layout 'password' %}

<div class="container" data-cy="passwordContainer">
  <div class="row">
    <div class="col xs12 m5 offset-m3">
      <h1 class="template-password__logo">
        {% render 'site-logo', store_name: shop.name, color: 'black' %}
      </h1>

      <h2>{{ 'general.password_page.opening_soon' | t }}</h2>

      {% if shop.password_message != blank %}
        <p>
          {{ shop.password_message }}
        </p>
      {% endif %}

      <a
        class="button button--primary"
        href="#loginForm"
        data-target="loginForm"
        data-cy="loginFormToggle"
        js-toggle="loginFormToggle"
      >
        <span>{{ 'general.password_page.password_link' | t }}</span>
      </a>

      <div id="loginForm" class="template-password__form" data-cy="loginForm">
        <div class="form-group">
          {% form 'storefront_password' %}
            {{ form.errors | default_errors }}

            <label for="password">
              {{ 'general.password_page.login_form.password_label' | t }}
            </label>

            <div class="input-group">
              <div class="input-group__control">
                <input
                  id="Password"
                  name="password"
                  placeholder="{{ 'general.password_page.login_form.password_placeholder' | t }}"
                  type="password"
                  data-cy="password"
                >
              </div>

              <div class="input-group__addon">
                <button
                  class="button button--primary"
                  name="commit"
                  type="submit"
                  data-cy="submit"
                >
                  <span>{{ 'general.password_page.login_form.submit' | t }}</span>
                </button>
              </div>
            </div>
          {% endform %}
        </div>

        <p>{{ 'general.password_page.admin_link_html' | t }}</p>
      </div>
    </div>
  </div>
</div>
