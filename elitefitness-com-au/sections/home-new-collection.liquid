<section class="section fetureCollection home_Collection" data-section-id="{{ section.id }}" data-section-type="collection-list" >
  <div class="container">
    <div class="row">
      {% for block in section.blocks %}
        <div class="col-md-3">
          <a href="{{ block.settings.collection_url }}" class="collection_body" style="padding: 0 15px;">
            <div class="collecImg">
              <img src="{{ block.settings.collection_img | img_url:'300x300' }}" class="collection_img" alt="">
              <h3 class="collection-name">{{ block.settings.collection_name }}</h3>
            </div>
          </a>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
  {
    "name": "Parent Collections",
    "settings": [
      {
        "type": "image_picker",
        "id": "background_img",
        "label": "Section Background Image"
      }
    ],
    "blocks": [
    {
      "name": "Home Collection",
      "type": "collection",
      "settings": [
        {
          "type": "image_picker",
          "id": "collection_img",
          "label": "Collection Image"
        },
        {
          "type": "url",
          "id": "collection_url",
          "label": "Collection Url"
        },
        {
          "type": "text",
          "id": "collection_name",
          "label": "Collection Name"
        }
      ]
    }
    ],
    "presets": [
      {
        "name": "Home New Collections",
        "category": "Images"
      }
    ]
  }
{% endschema %} {% include 'BrokenLinkRedirect' %}